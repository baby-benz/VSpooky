{
	"name": "vspooky",
	"displayName": "VSpooky",
	"description": "Spooky Spoty Player",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"private": true,
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-spotify",
					"title": "vscode-spotify",
					"icon": "resources/logo.png"
				}
			]
		},
		"views": {
			"vscode-spotify": [
				{
					"id": "vscode-spotify-playlists",
					"name": "Playlists"
				},
				{
					"id": "vscode-spotify-tracks",
					"name": "Tracks"
				}
			]
		}
	},
	"menus": {
		"view/title": [
			{
				"command": "spotify.loadPlaylists",
				"when": "view == vscode-spotify-playlists",
				"group": "navigation"
			},
			{
				"command": "spotify.loadTracks",
				"when": "view == vscode-spotify-tracks",
				"group": "navigation"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"prebuild": "npm install",
		"webpack": "webpack --mode development",
		"webpack-watch": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "tsc ./src/test/runTest.ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/jquery": "^3.3.31",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^10.2.0",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"@types/express": "^4.17.2",
		"@types/jsdom": "^12.2.4",
		"@types/shelljs": "^0.8.6",
		"autobind-decorator": "^2.4.0",
		"bootstrap-daterangepicker": "^3.0.5",
		"jquery": "^3.4.1",
		"node-cmd": "^3.0.0",
		"shelljs": "^0.8.3",
		"spotify-web-api-js": "^1.2.0"
	}
}
